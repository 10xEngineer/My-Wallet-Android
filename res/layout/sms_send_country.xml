<?xml version="1.0" encoding="utf-8" ?> 

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" >

 <LinearLayout android:layout_height="80dip" android:layout_width="fill_parent" android:orientation="vertical">
  <TextView android:id="@+id/prompt" android:textStyle="bold"  android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="3dip"/> 
	<Spinner
  android:id="@+id/homeSIM"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_centerHorizontal="true"
  android:layout_below="@+id/aspnCountries"
  android:background="#FFFFFFFF"
	/> 
  </LinearLayout>

 <LinearLayout android:layout_height="150dip" android:layout_width="fill_parent" android:orientation="horizontal">
 <Button android:id="@+id/cancel" android:layout_height="60dip" android:layout_width="wrap_content" android:text="Cancel" />
 <Button android:id="@+id/ok" android:layout_height="60dip" android:layout_width="fill_parent" android:text="OK" />
 </LinearLayout>

  </LinearLayout>
