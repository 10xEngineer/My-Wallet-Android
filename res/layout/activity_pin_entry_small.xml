<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF039BD3"
    tools:context=".PinEntryView"
    >
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/net_bg"
        android:background="@null"
        android:scaleType="fitXY"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
	    android:layout_alignParentBottom="true"
        >
        
        <ImageView
    	android:layout_width="83dp"
        android:layout_height="94dp"
        android:src="@drawable/logo2x"
        android:gravity="center_horizontal"
	    android:layout_gravity="center_horizontal"
    	android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
	    android:layout_alignParentTop="true"
    	/>
        
    <TextView 
    	android:id="@+id/titleBox"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Please enter your 4-digit pin"
    	android:gravity="center"
    	android:textColor="#FFffffff"
    	android:textSize="18sp" 
    	android:padding="10dip"   
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	    android:gravity="center_horizontal"
		android:layout_gravity="center_horizontal"
        >
    <TextView 
        android:id="@+id/pinBox0"
        android:inputType="numberPassword"
        android:password="true"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:editable="false"
			android:singleLine="true"
			android:maxLength="1"
        android:layout_margin="10dip"
        android:textSize="40sp"
        android:textColor="#FF1a87c6"
        android:gravity="center"
        android:background="@drawable/pinbox_back"/>
    <TextView 
        android:id="@+id/pinBox1"
        android:inputType="numberPassword"
        android:password="true"
        android:editable="false"
        android:layout_width="50dip"
        android:layout_height="50dip"
			android:singleLine="true"
			android:maxLength="1"
        android:layout_margin="10dip"
        android:textSize="40sp"
        android:textColor="#FF1a87c6"
        android:gravity="center"
        android:background="@drawable/pinbox_back"/>
    <TextView 
        android:id="@+id/pinBox2"
        android:inputType="numberPassword"
        android:password="true"
        android:editable="false"
			android:singleLine="true"
			android:maxLength="1"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_margin="10dip"
        android:textSize="40sp"
        android:textColor="#FF1a87c6"
        android:gravity="center"
        android:background="@drawable/pinbox_back"/>
    <TextView 
        android:id="@+id/pinBox3"
        android:inputType="numberPassword"
        android:password="true"
        android:editable="false"
			android:singleLine="true"
			android:maxLength="1"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_margin="10dip"
        android:textSize="40sp"
        android:textColor="#FF1a87c6"
        android:gravity="center" 
        android:background="@drawable/pinbox_back"/>     
    </LinearLayout>   
    <TextView 
    	android:id="@+id/statusMessage"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text=""
    	android:gravity="center"
    	android:textColor="#ff0000"
    	android:textSize="20sp" 
    	android:padding="5dip"
        />  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
    android:background="#FF333333"
        android:orientation="horizontal" >
    <TableLayout
    android:id="@+id/numericPad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dip"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="#FF333333"
    > 
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
    >
    <Button
            android:id="@+id/button1"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="1"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button2"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="2"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button3"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="3"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
    </TableRow>
        <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
    >
    <Button
            android:id="@+id/button4"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="4"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button5"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="5"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button6"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="6"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
    </TableRow>
        <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
    >
    <Button
            android:id="@+id/button7"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="7"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button8"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="8"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button9"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="9"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
    </TableRow>
	<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
    >
    <Button
            android:id="@+id/buttonForgot"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="FORGOT PIN"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_margin="3dip"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/button0"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="0"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
     <Button
            android:id="@+id/buttonDeleteBack"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
		    android:layout_gravity="center_vertical|center_horizontal" 
    		android:gravity="center_vertical|center_horizontal" 
            android:text="CLEAR"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="#FF333333"
     >
     </Button>
    </TableRow>
    </TableLayout>   
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
